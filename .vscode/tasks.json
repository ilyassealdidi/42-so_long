{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "/usr/bin/clang",
            "args": [
                "-lmlx",
                "-framework",
                "OpenGL",
                "-framework",
                "AppKit",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/src/main.c",
                "${workspaceFolder}/src/utils.c",
                "${workspaceFolder}/src/parse.c",
                "${workspaceFolder}/src/window.c",
                "${workspaceFolder}/src/gameplay.c",
                "${workspaceFolder}/src/map.c",
                "${workspaceFolder}/helpers/get_next_line/get_next_line.c",
                "${workspaceFolder}/helpers/libft/libft.a",
                "-o",
                "${workspaceFolder}/so_long"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}

// ${workspaceFolder}: The absolute path of the folder opened in Visual Studio Code.
// ${workspaceFolderBasename}: The name of the folder opened in Visual Studio Code without any slashes (/).
// ${file}: The current opened file.
// ${relativeFile}: The current opened file relative to the workspace folder.
// ${fileBasename}: The current opened file's basename.
// ${fileBasenameNoExtension}: The current opened file's basename without the file extension.
// ${fileDirname}: The current opened file's directory name.
// ${fileExtname}: The current opened file's extension.
// ${cwd}: The current working directory.